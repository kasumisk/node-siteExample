extends ../common/layout
block header
   include ../common/header
block content
   .container
      .row
         form.form-horizontal(method='post',action="/admin/movie/add")
            .form-group
               label.col-sm-2.control-label(for="inputTitle") 电影名字
               .col-sm-10
                  input#inputTitle.col-sm-10.form-control(type="text",name="title")
            .form-group
               label.col-sm-2.control-label(for="inputDirector") 导演
               .col-sm-10
                  input#inputDirector.col-sm-10.form-control(type="text",name="director")
            .form-group
               label.col-sm-2.control-label(for="inputCountry") 国家
               .col-sm-10
                  input#inputCountry.col-sm-10.form-control(type="text",name="country")
            .form-group
               label.col-sm-2.control-label(for="inputLanguage") 语言
               .col-sm-10
                  input#inputLanguage.col-sm-10.form-control(type="text",name="language")
            .form-group
               label.col-sm-2.control-label(for="inputYear") 上映年份
               .col-sm-10
                  input#inputYear.col-sm-10.form-control(type="text",name="year")
            .form-group
               label.col-sm-2.control-label(for="inputFlash") 播放地址
               .col-sm-10
                  input#inputFlash.col-sm-10.form-control(type="text",name="flash")
            .form-group
               label.col-sm-2.control-label(for="inputPoster") 海报地址
               .col-sm-5
                  input#inputupload.col-sm-10.form-control(type="file",name="upload")
                  button#upload(type='button',style='float:right' class='btn btn-primary') 上传
               .col-sm-5
                  input#inputPoster.col-sm-10.form-control(type="text",name="poster")
            .form-group
               label.col-sm-2.control-label(for="inputSummary") 简介
               .col-sm-10
                  input#inputSummary.col-sm-10.form-control(type="textarea" name="summary")
            .form-actions
               button(type='submit',style='float:right' class='btn btn-primary') 提交
block script
   script(src='/vendor/jquery/dist/jquery.min.js',type='text/javascript')
   script(src='/vendor/bootstrap/dist/js/bootstrap.min.js',type='text/javascript')
   script(src='/js/upload.js',type='text/javascript')